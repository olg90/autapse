#CV6 Test

AP_per_second = 300 #300
n_seconds = 1 #60 seconds/min * 60 minutes = 3600 seconds
firing_times = generate_poisson_times(AP_per_second, n_seconds)
AP_decision_type = 'step' #'step' or 'sigmoid'

release_probability_list = np.linspace(0, 1, 40)
n_vesicles_list = np.arange(10, 501,5)
voltage_update_method = 'vesicle'
run_test_type = 'mean_threshold_test'
#refill_ratio_constant = 0.1 # 0.15 for smaller, 1 for larger
v_threshold_value = 0 # Value to check so have mean firing time the same

refill_ratio_constants = [0.1, 0.3, 0.5, 0.7,0.8, 1]


#####################

plot_number = 0

CV_plots = np.load('CV_plots.npy')

CV_plot = CV_plots[plot_number]

n_attenuating = 5
n_amplifying = 5
delta_x_L = 0.05
delta_x_R = 0.01

max_val = np.max(CV_plots)
min_val = np.min(CV_plots)

attenuating_colors = [(1-1/(i+1), 1- 1/(i+1), 1) for i in range(n_attenuating+1)]
amplifying_colors = [(1, 1-(i+1)/(n_amplifying+1), 1-(i+1)/(n_amplifying+1)) for i in range(n_amplifying+1)]

attenuating_levels = list(np.linspace(min_val, 1-delta_x_L, n_attenuating+1))
amplifying_levels = list(np.linspace(1+delta_x_R, max_val, n_amplifying+1))

white_color = ['white']

colors_list_full = attenuating_colors + white_color + amplifying_colors
levels_list_full = attenuating_levels + amplifying_levels

cmap = colors.ListedColormap(colors_list_full)
good_plots = [CV_plots[0], CV_plots[1], CV_plots[2], CV_plots[5]]
good_refill_ratios = [refill_ratio_constants[i] for i in [0,1,2,5]]

fig, ax = plt.subplots(1,4)
norm = colors.BoundaryNorm(levels_list_full, cmap.N)

for i in range(len(good_plots)):
    im = ax[i].contourf(good_plots[i], levels=levels_list_full, cmap=cmap, extend = 'both', norm = norm, 
                     extent = [n_vesicles_list[0], n_vesicles_list[-1],
                               release_probability_list[0], release_probability_list[-1],
                               ])
    
    ax[i].set_title('Pr(refill vesicle)= {}'.format(good_refill_ratios[i]), size = font_size)
    ax[i].tick_params(labelsize = font_size)

    if i != 0:
        ax[i].set_yticks([])
    if i == 0:
        ax[i].set_ylabel('Vesicle release probaility', size = font_size)
    if i == 1:
        ax[i].set_xlabel('                      Maximum number of docking sites', size = font_size)
        
    if i == len(good_plots)-1:
        cbar = fig.colorbar(im)
        #cbar.ax.set_yticklabels([0, 1, 2]) 
        labels_list = [str(np.around(x,2)) for x in levels_list_full]
        #cbar.ax.set_yticklabels(labels_list)
        cbar.ax.set_yticklabels([])
        cbar.set_label('Attenuating (1) Amplifying', size = font_size)
        cbar.ax.tick_params(size=0)
        
plt.subplots_adjust(top=0.93,
bottom=0.15,
left=0.06,
right=0.99,
hspace=0.2,
wspace=0.055)

plt.show()
